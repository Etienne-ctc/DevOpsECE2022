Vagrant.configure("2") do |config|

  config.vbguest.auto_update = true

  config.vm.define "centos_server" do |server|
    server.vm.box = "centos/7"
    server.vm.provider "virtualbox" do |vb|
      vb.name = "ubuntu.server.local"
      vb.memory = 2048
      vb.cpus = 1
    end
  end
  
  config.vm.synced_folder "../userapi/", "/home/vagrant/userapi", type:"virtualbox", create: true  
  
  config.vm.network "forwarded_port", guest: 3000, host: 3000

  config.vm.provision "shell",
    inline: "bash /vagrant/startup.sh"
  
  config.vm.provision "shell",
    inline: "cd /home/vagrant/userapi ; npm install ; npm start"  

#  config.vm.provision "ansible_local" do |ansible|
#    ansible.playbook = "playbook.yml"
#  end

end

